<!DOCTYPE html>
<html lang="en">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0"/>
  <title>Modify a Bot</title>

  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

</head>
<body>
  <%=message%>
  <br>
  <i class="material-icons">android</i>
  &nbsp;Modify a chatBot&nbsp;
  <i class="material-icons">android</i>
  <form action="modify" method="post">
    <select  name="name">
      <% robots.forEach(function(robot){ %>
          <option value="<%=robot.name%>"><%=robot.name%></option> <!-- Récupération du nom du bot-->

          <% }); %>
    </select>
    <input type="submit" name="" value="Submit">
  </form>
<%if(name!=undefined){ %>
  <form action="modify" method="post">
    Old name : <%=robot.name%>
    <br>
    New name : <input type="text" name="nom" value="<%=robot.name%>" >
    <br>
    Old personality : <%=robot.personality%>
    <br>
    /!\ You can't change the personality currently /!\
    <br>
    New personality :     <select  name="personality">
          <% personalities.forEach(function(personality){ %>
              <option value="<%=personality%>"><%=personality%></option> <!-- Récupération du port-->

              <% }); %>
        </select>
        <input type="hidden" name="bot" value="<%=robot.name%>">
    <input type="submit" name="" value="submit">
  </form>
<%} %>
<form action="/" method="get">
  <input type="submit" value="back">
</form>

</body>
</html>
